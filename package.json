{
  "name": "@openfn/language-common",
  "version": "2.0.0-rc3",
  "description": "Common Expressions for OpenFn",
  "scripts": {
    "build": "npm exec tsm build.ts",
    "build:all": "npm run clean && npm run build",
    "clean": "rimraf dist/ types/",
    "test": "mocha -r tsm test/*.ts",
    "test:watch": "mocha -r tsm --watch-files test --watch test/*.ts",
    "ast": "simple-ast --adaptor ./dist/index.js --output ast.json",
    "postversion": "git push && git push --tags",
    "version": "npm run build && git add -A lib ast.json"
  },
  "author": "Open Function Group",
  "main": "dist/index.cjs",
  "types": "dist/language-common.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/index.js",
        "types": "./dist/language-common.d.ts"
      },
      "require": {
        "default": "./dist/index.cjs",
        "types": "./dist/language-common.d.ts"
      },
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.29.0",
    "@openfn/simple-ast": "^0.3.2",
    "@types/mocha": "^8.2.3",
    "@types/node": "^18.0.0",
    "axios": "^0.21.1",
    "chai": "^4.2.0",
    "date-fns": "^2.28.0",
    "deep-eql": "^4.0.0",
    "dts-bundle-generator": "^6.12.0",
    "esbuild": "^0.14.47",
    "execa": "^6.1.0",
    "jsonpath-plus": "^7.0.0",
    "mocha": "^7.1.0",
    "nock": "^13.0.5",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.3",
    "tsm": "^2.2.1",
    "typescript": "^4.7.4"
  },
  "directories": {
    "dist": "dist"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenFn/language-common.git"
  },
  "bugs": {
    "url": "https://github.com/OpenFn/language-common/issues"
  },
  "homepage": "https://github.com/OpenFn/language-common#readme",
  "license": "LGPL-3.0-or-later",
  "bundleDependencies": []
}
